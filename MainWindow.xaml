<Window x:Class="MsgClientUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:c="clr-namespace:MsgClientUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

        <DataTemplate x:Key="MessageTemplate">
            <StackPanel>

                <TextBlock Text="{Binding Path=Author}" Foreground="#A9BCD0"  TextAlignment="Justify" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Path=Content}" Foreground="#D8DBE2"  TextAlignment="Justify" TextWrapping="Wrap"/>

            </StackPanel>
        </DataTemplate>


        <DataTemplate x:Key="UsersTemplate">
            <StackPanel>

                <TextBlock Text="{Binding Path=Author}" Foreground="#A9BCD0"  TextAlignment="Justify" TextWrapping="Wrap"/>

            </StackPanel>
        </DataTemplate>

    </Window.Resources>


    <Grid Background="#1B1B1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="2"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="3" Grid.Row="1" Background="#373F51" >
            
        </Grid>

        <Grid Grid.Column="1" Grid.Row="3">
            <ListBox 
                x:Name="userList"
                ItemTemplate="{StaticResource UsersTemplate}"
                Background="#373F51"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                IsSynchronizedWithCurrentItem="True"
                BorderThickness="0"
               />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <Button Content="C" FontSize="11" FontFamily="Gadugi" FontWeight="Heavy" Background="#3C3751" Click="Create_Channel_Click" Grid.Column="0"/>
            <Button Content="R" FontSize="11" FontFamily="Gadugi" FontWeight="Heavy" Background="#3C3751" Click="Reconnect_Click" Grid.Column="2"/>
        </Grid>



        <Grid Grid.Column="3" Grid.Row="3" >
            <ListBox 
                x:Name="messageList"
                ItemTemplate="{StaticResource MessageTemplate}"
                Background="#373F51"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                IsSynchronizedWithCurrentItem="True"
                Visibility="Visible"
                BorderThickness="0"
               />

            <Grid 
                x:Name="newChannelSettings"
                Background="#373F51"
                Visibility="Collapsed">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

            </Grid>

            </Grid>

        <Grid Grid.Column="5" Grid.Row="1" Grid.RowSpan="5" Background="#373F51">

        </Grid>

        <Grid Grid.Column="3" Grid.Row="5" >
            <TextBox x:Name="messageTextbox" Grid.Column="0" Background="#373F51" Foreground="#D8DBE2" KeyDown="Message_Enter_KeyDown" TextWrapping="Wrap" BorderThickness="0"/>
        </Grid>

    </Grid>
</Window>
