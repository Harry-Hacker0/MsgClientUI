<Page x:Class="MsgClientUI.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MsgClientUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>

        <Grid Grid.Column="3" Grid.Row="1" Background="#373F51" >

        </Grid>

        <Grid Grid.Column="0" Grid.Row="3">
            <ListBox 
                x:Name="userList"
                Background="#373F51"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                IsSynchronizedWithCurrentItem="True"
                BorderThickness="0"
               />
        </Grid>

        <Grid Grid.Column="0" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Content="C" FontSize="11" FontFamily="Gadugi" FontWeight="Heavy" Background="#3C3751" Click="Create_Channel_Click" Grid.Column="0"/>
            <Button Content="R" FontSize="11" FontFamily="Gadugi" FontWeight="Heavy" Background="#3C3751" Click="Reconnect_Click" Grid.Column="2"/>
        </Grid>


        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" Background="#373F51">
            <Frame x:Name="MainFrame">

            </Frame>
















        </Grid>
    </Grid>
</Page>
